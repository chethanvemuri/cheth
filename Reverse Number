package bh;

import java.util.Scanner;

public class bh {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner b = new Scanner(System.in);
		int a,sum=0,r;
		System.out.println("Enter a number: ");
		a=b.nextInt();
		int temp=a;
		while(a>0)
		{
			r=a%10;
			sum=(sum*10)+r;
			a=a/10;
		}
		System.out.println("Reverse Number is: "+sum);
	}
        
}
